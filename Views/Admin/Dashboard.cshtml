@{
    ViewData["Title"] = "Панель администратора";
    Layout = "_AdminLayout";
}

<style>
    /* Стили для карточек статистики */
    .card-title {
        font-size: 1rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 150px;
    }

    .card-text.display-4 {
        font-size: 2.5rem;
        line-height: 1.1;
    }

    /* Стили для таблицы информации о системе */
    .table th {
        width: 40%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table td {
        width: 60%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Стили для быстрых действий */
    .list-group-item-action div {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: calc(100% - 20px);
    }

    /* Адаптивность для мобильных */
    @@media (max-width: 576px) {
        .card-title {
            max-width: 100px;
        }
        
        .card-text.display-4 {
            font-size: 2rem;
        }
    }
</style>

<div class="admin-dashboard">
    <h1 class="mb-4">Панель администратора</h1>
    
    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Пользователи</h5>
                            <p class="card-text display-4">@ViewBag.UserCount</p>
                        </div>
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a href="@Url.Action("Users", "Admin")" class="text-white">Подробнее</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Тесты</h5>
                            <p class="card-text display-4">@ViewBag.TestCount</p>
                        </div>
                        <i class="fas fa-tasks fa-3x"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a href="@Url.Action("Tests", "Admin")" class="text-white">Подробнее</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Видео</h5>
                            <p class="card-text display-4">@ViewBag.VideoCount</p>
                        </div>
                        <i class="fas fa-video fa-3x"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a href="@Url.Action("Videos", "Admin")" class="text-white">Подробнее</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0" title="Результаты тестов">Результаты тестов</h5>
                            <p class="card-text display-4">@ViewBag.TestResultCount</p>
                        </div>
                        <i class="fas fa-chart-bar fa-3x"></i>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a href="#" class="text-white">Подробнее</a>
                    <i class="fas fa-angle-right"></i>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-bullhorn me-1"></i>
                    Быстрые действия
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="@Url.Action("CreateTest", "Admin")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div title="Создать новый тест">
                                <i class="fas fa-plus-circle me-2 text-success"></i>
                                Создать новый тест
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="@Url.Action("CreateVideo", "Admin")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div title="Добавить новое видео">
                                <i class="fas fa-plus-circle me-2 text-info"></i>
                                Добавить новое видео
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="@Url.Action("Users", "Admin")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div title="Управление пользователями">
                                <i class="fas fa-users me-2 text-primary"></i>
                                Управление пользователями
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        <a href="@Url.Action("Tests", "Admin")" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div title="Управление тестами">
                                <i class="fas fa-list me-2 text-warning"></i>
                                Управление тестами
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Информация о системе
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th scope="row" title="Версия системы">Версия системы</th>
                                <td title="1.0.0">1.0.0</td>
                            </tr>
                            <tr>
                                <th scope="row" title="Последнее обновление">Последнее обновление</th>
                                <td title="@DateTime.Now.ToString("dd.MM.yyyy")">@DateTime.Now.ToString("dd.MM.yyyy")</td>
                            </tr>
                            <tr>
                                <th scope="row" title="Среда выполнения">Среда выполнения</th>
                                <td title="ASP.NET Core">ASP.NET Core</td>
                            </tr>
                            <tr>
                                <th scope="row" title="База данных">База данных</th>
                                <td title="SQL Server">SQL Server</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 