@using Microsoft.AspNetCore.Localization
@using System.Globalization
@{
    // Получаем текущую культуру
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureTwoLetter = requestCulture?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "ru";
    
    var titleText = cultureTwoLetter switch
    {
        "ru" => "Казахский язык",
        "kk" => "Қазақ тілі",
        "en" => "Kazakh Language",
        "tr" => "Kazak Dili",
        _ => "Kazakh Language"
    };
    
    ViewData["Title"] = titleText;
}

<div class="container language-page">
    <div class="language-header" style="background-color: rgb(37,37,56);">
        <h1>
            @{
                var headerText = cultureTwoLetter switch
                {
                    "ru" => "Казахский язык",
                    "kk" => "Қазақ тілі",
                    "en" => "Kazakh Language",
                    "tr" => "Kazak Dili",
                    _ => "Kazakh Language"
                };
            }
            @headerText
        </h1>
        <p class="lead">
            @{
                var leadText = cultureTwoLetter switch
                {
                    "ru" => "Қазақ тілі - государственный язык Республики Казахстан",
                    "kk" => "Қазақ тілі - Қазақстан Республикасының мемлекеттік тілі",
                    "en" => "Kazakh language - the official language of the Republic of Kazakhstan",
                    "tr" => "Kazak dili - Kazakistan Cumhuriyeti'nin resmi dili",
                    _ => "Kazakh language - the official language of the Republic of Kazakhstan"
                };
            }
            @leadText
        </p>
    </div>

    <div class="levels-section">
        <h2>
            @{
                var chooseLevelText = cultureTwoLetter switch
                {
                    "ru" => "Выберите свой уровень",
                    "kk" => "Деңгейіңізді таңдаңыз",
                    "en" => "Choose Your Level",
                    "tr" => "Seviyenizi Seçin",
                    _ => "Choose Your Level"
                };
            }
            @chooseLevelText
        </h2>
        <div class="level-cards">
            <div class="level-card">
                <h3>A1 - 
                    @{
                        var beginnerText = cultureTwoLetter switch
                        {
                            "ru" => "Начальный",
                            "kk" => "Бастауыш",
                            "en" => "Beginner",
                            "tr" => "Başlangıç",
                            _ => "Beginner"
                        };
                    }
                    @beginnerText
                </h3>
                <p>
                    @{
                        var beginnerDescText = cultureTwoLetter switch
                        {
                            "ru" => "Базовые фразы и простое общение",
                            "kk" => "Негізгі сөйлемдер және қарапайым қарым-қатынас",
                            "en" => "Basic phrases and simple communication",
                            "tr" => "Temel ifadeler ve basit iletişim",
                            _ => "Basic phrases and simple communication"
                        };
                    }
                    @beginnerDescText
                </p>
                <a href="/Test/Level?language=kk&level=A1" class="btn btn-primary">
                    @{
                        var startText = cultureTwoLetter switch
                        {
                            "ru" => "Начать",
                            "kk" => "Бастау",
                            "en" => "Start",
                            "tr" => "Başla",
                            _ => "Start"
                        };
                    }
                    @startText
                </a>
            </div>
            <div class="level-card">
                <h3>A2 - 
                    @{
                        var elementaryText = cultureTwoLetter switch
                        {
                            "ru" => "Элементарный",
                            "kk" => "Қарапайым",
                            "en" => "Elementary",
                            "tr" => "Temel",
                            _ => "Elementary"
                        };
                    }
                    @elementaryText
                </h3>
                <p>
                    @{
                        var elementaryDescText = cultureTwoLetter switch
                        {
                            "ru" => "Простые диалоги и тексты",
                            "kk" => "Қарапайым диалогтар мен мәтіндер",
                            "en" => "Simple dialogues and texts",
                            "tr" => "Basit diyaloglar ve metinler",
                            _ => "Simple dialogues and texts"
                        };
                    }
                    @elementaryDescText
                </p>
                <a href="/Test/Level?language=kk&level=A2" class="btn btn-primary">@startText</a>
            </div>
            <div class="level-card">
                <h3>B1 - 
                    @{
                        var intermediateText = cultureTwoLetter switch
                        {
                            "ru" => "Средний",
                            "kk" => "Орта",
                            "en" => "Intermediate",
                            "tr" => "Orta",
                            _ => "Intermediate"
                        };
                    }
                    @intermediateText
                </h3>
                <p>
                    @{
                        var intermediateDescText = cultureTwoLetter switch
                        {
                            "ru" => "Свободное общение на бытовые темы",
                            "kk" => "Күнделікті тақырыптарға еркін сөйлесу",
                            "en" => "Everyday communication",
                            "tr" => "Günlük iletişim",
                            _ => "Everyday communication"
                        };
                    }
                    @intermediateDescText
                </p>
                <a href="/Test/Level?language=kk&level=B1" class="btn btn-primary">@startText</a>
            </div>
            <div class="level-card">
                <h3>B2 - 
                    @{
                        var upperIntermediateText = cultureTwoLetter switch
                        {
                            "ru" => "Выше среднего",
                            "kk" => "Ортадан жоғары",
                            "en" => "Upper Intermediate",
                            "tr" => "İleri",
                            _ => "Upper Intermediate"
                        };
                    }
                    @upperIntermediateText
                </h3>
                <p>
                    @{
                        var upperIntermediateDescText = cultureTwoLetter switch
                        {
                            "ru" => "Сложные тексты и дискуссии",
                            "kk" => "Күрделі мәтіндер мен талқылаулар",
                            "en" => "Complex texts and discussions",
                            "tr" => "Karmaşık metinler ve tartışmalar",
                            _ => "Complex texts and discussions"
                        };
                    }
                    @upperIntermediateDescText
                </p>
                <a href="/Test/Level?language=kk&level=B2" class="btn btn-primary">@startText</a>
            </div>
        </div>
    </div>

    <div class="resources-section">
        <h2>
            @{
                var additionalResourcesText = cultureTwoLetter switch
                {
                    "ru" => "Дополнительные материалы",
                    "kk" => "Қосымша материалдар",
                    "en" => "Additional Resources",
                    "tr" => "Ek Kaynaklar",
                    _ => "Additional Resources"
                };
            }
            @additionalResourcesText
        </h2>
        <div class="resources-grid">
            <a href="/Video/Kazakh" class="resource-card">
                <i class="fas fa-video"></i>
                <h3>
                    @{
                        var videoLessonsText = cultureTwoLetter switch
                        {
                            "ru" => "Видеоуроки",
                            "kk" => "Бейнесабақтар",
                            "en" => "Video Lessons",
                            "tr" => "Video Dersler",
                            _ => "Video Lessons"
                        };
                    }
                    @videoLessonsText
                </h3>
                <p>
                    @{
                        var learnFromNativeText = cultureTwoLetter switch
                        {
                            "ru" => "Обучающие видео от носителей языка",
                            "kk" => "Тілді ана тілі ретінде білетіндерден бейнесабақтар",
                            "en" => "Learn from native speakers",
                            "tr" => "Ana dili konuşanlardan öğrenin",
                            _ => "Learn from native speakers"
                        };
                    }
                    @learnFromNativeText
                </p>
            </a>
            <a href="#" class="resource-card">
                <i class="fas fa-book"></i>
                <h3>
                    @{
                        var studyMaterialsText = cultureTwoLetter switch
                        {
                            "ru" => "Учебные материалы",
                            "kk" => "Оқу материалдары",
                            "en" => "Study Materials",
                            "tr" => "Çalışma Materyalleri",
                            _ => "Study Materials"
                        };
                    }
                    @studyMaterialsText
                </h3>
                <p>
                    @{
                        var grammarExercisesText = cultureTwoLetter switch
                        {
                            "ru" => "Грамматика и упражнения",
                            "kk" => "Грамматика және жаттығулар",
                            "en" => "Grammar and exercises",
                            "tr" => "Dilbilgisi ve alıştırmalar",
                            _ => "Grammar and exercises"
                        };
                    }
                    @grammarExercisesText
                </p>
            </a>
            <a href="#" class="resource-card">
                <i class="fas fa-comments"></i>
                <h3>
                    @{
                        var speakingPracticeText = cultureTwoLetter switch
                        {
                            "ru" => "Разговорная практика",
                            "kk" => "Сөйлеу тәжірибесі",
                            "en" => "Speaking Practice",
                            "tr" => "Konuşma Pratiği",
                            _ => "Speaking Practice"
                        };
                    }
                    @speakingPracticeText
                </h3>
                <p>
                    @{
                        var dialoguesPronunciationText = cultureTwoLetter switch
                        {
                            "ru" => "Диалоги и произношение",
                            "kk" => "Диалогтар мен айтылым",
                            "en" => "Dialogues and pronunciation",
                            "tr" => "Diyaloglar ve telaffuz",
                            _ => "Dialogues and pronunciation"
                        };
                    }
                    @dialoguesPronunciationText
                </p>
            </a>
        </div>
    </div>
</div>

<style>
.language-page {
    padding: 20px;
}

.language-header {
    color: white;
    padding: 60px 30px;
    border-radius: 15px;
    text-align: center;
    margin-bottom: 40px;
}

.language-header h1 {
    font-size: 3em;
    margin-bottom: 20px;
}

.levels-section, .resources-section {
    margin-bottom: 40px;
}

.levels-section h2, .resources-section h2 {
    text-align: center;
    margin-bottom: 30px;
}

.level-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.level-card {
    background: var(--dark-card-bg);
    padding: 25px;
    border-radius: 10px;
    text-align: center;
    transition: transform 0.3s ease;
}

.level-card:hover {
    transform: translateY(-5px);
}

.resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
}

.resource-card {
    background: var(--dark-card-bg);
    padding: 25px;
    border-radius: 10px;
    text-align: center;
    color: inherit;
    text-decoration: none;
    transition: transform 0.3s ease;
}

.resource-card:hover {
    transform: translateY(-5px);
    color: inherit;
}

.resource-card i {
    font-size: 2em;
    margin-bottom: 15px;
    color: #3498db;
}
</style> 