@{
    ViewData["Title"] = "English Language";
}

<div class="container language-page">
    <div class="language-header" style="background-color: rgb(37,37,56);">
        <h1>English Language</h1>
        <p class="lead">Learn the global language of business and communication</p>
    </div>

    <div class="levels-section">
        <h2>Choose Your Level</h2>
        <div class="level-cards">
            <div class="level-card">
                <h3>A1 - Beginner</h3>
                <p>Basic phrases and simple communication</p>
                <a href="/Test/Level?language=en&level=A1" class="btn btn-primary">Start</a>
            </div>
            <div class="level-card">
                <h3>A2 - Elementary</h3>
                <p>Simple dialogues and texts</p>
                <a href="/Test/Level?language=en&level=A2" class="btn btn-primary">Start</a>
            </div>
            <div class="level-card">
                <h3>B1 - Intermediate</h3>
                <p>Everyday communication</p>
                <a href="/Test/Level?language=en&level=B1" class="btn btn-primary">Start</a>
            </div>
            <div class="level-card">
                <h3>B2 - Upper Intermediate</h3>
                <p>Complex texts and discussions</p>
                <a href="/Test/Level?language=en&level=B2" class="btn btn-primary">Start</a>
            </div>
        </div>
    </div>

    <div class="resources-section">
        <h2>Additional Resources</h2>
        <div class="resources-grid">
            <a href="/Video/English" class="resource-card">
                <i class="fas fa-video"></i>
                <h3>Video Lessons</h3>
                <p>Learn from native speakers</p>
            </a>
            <a href="#" class="resource-card">
                <i class="fas fa-book"></i>
                <h3>Study Materials</h3>
                <p>Grammar and exercises</p>
            </a>
            <a href="#" class="resource-card">
                <i class="fas fa-comments"></i>
                <h3>Speaking Practice</h3>
                <p>Dialogues and pronunciation</p>
            </a>
        </div>
    </div>
</div>

<style>
.language-page {
    padding: 20px;
}

.language-header {
    color: white;
    padding: 60px 30px;
    border-radius: 15px;
    text-align: center;
    margin-bottom: 40px;
}

.language-header h1 {
    font-size: 3em;
    margin-bottom: 20px;
}

.levels-section, .resources-section {
    margin-bottom: 40px;
}

.levels-section h2, .resources-section h2 {
    text-align: center;
    margin-bottom: 30px;
}

.level-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.level-card {
    background: var(--dark-card-bg);
    padding: 25px;
    border-radius: 10px;
    text-align: center;
    transition: transform 0.3s ease;
}

.level-card:hover {
    transform: translateY(-5px);
}

.resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
}

.resource-card {
    background: var(--dark-card-bg);
    padding: 25px;
    border-radius: 10px;
    text-align: center;
    color: inherit;
    text-decoration: none;
    transition: transform 0.3s ease;
}

.resource-card:hover {
    transform: translateY(-5px);
    color: inherit;
}

.resource-card i {
    font-size: 2em;
    margin-bottom: 15px;
    color: #3498db;
}
</style> 