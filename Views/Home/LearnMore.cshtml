@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@{
    // Получаем текущую культуру
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureTwoLetter = requestCulture?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "ru";
    
    ViewData["Title"] = cultureTwoLetter switch
    {
        "ru" => "Узнать больше",
        "kk" => "Көбірек білу",
        "en" => "Learn More",
        "tr" => "Daha Fazla Bilgi",
        _ => "Узнать больше"
    };
}

<div class="container mt-5">
    <div class="row mb-5">
        <div class="col-md-12 text-center">
            <h1 class="display-4 about-title">
                @{
                    var platformWorkTitle = cultureTwoLetter switch
                    {
                        "ru" => "Как работает платформа",
                        "kk" => "Платформа қалай жұмыс істейді",
                        "en" => "How the Platform Works",
                        "tr" => "Platform Nasıl Çalışır",
                        _ => "Как работает платформа"
                    };
                }
                @platformWorkTitle
            </h1>
            <p class="lead about-subtitle">
                @{
                    var innovativeApproachText = cultureTwoLetter switch
                    {
                        "ru" => "Инновационный подход к изучению языков",
                        "kk" => "Тілдерді үйренудің инновациялық тәсілі",
                        "en" => "Innovative Approach to Language Learning",
                        "tr" => "Dil Öğrenimine Yenilikçi Yaklaşım",
                        _ => "Инновационный подход к изучению языков"
                    };
                }
                @innovativeApproachText
            </p>
        </div>
    </div>
    
    <!-- Методология -->
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="rounded-card p-4">
                <h2 class="mb-4 text-center">
                    @{
                        var ourMethodologyText = cultureTwoLetter switch
                        {
                            "ru" => "Наша методология",
                            "kk" => "Біздің әдіснамамыз",
                            "en" => "Our Methodology",
                            "tr" => "Metodolojimiz",
                            _ => "Наша методология"
                        };
                    }
                    @ourMethodologyText
                </h2>
                <div class="row">
                    <div class="col-md-6">
                        <div class="methodology-card p-3 mb-4">
                            <h3 class="h5"><i class="fas fa-code"></i> 
                                @{
                                    var immersionTitle = cultureTwoLetter switch
                                    {
                                        "ru" => "Погружение в язык",
                                        "kk" => "Тілге ену",
                                        "en" => "Language Immersion",
                                        "tr" => "Dile Dalış",
                                        _ => "Погружение в язык"
                                    };
                                }
                                @immersionTitle
                            </h3>
                            <p>
                                @{
                                    var immersionDesc = cultureTwoLetter switch
                                    {
                                        "ru" => "Мы верим в силу полного погружения. Наши видеоуроки помогают быстрее адаптироваться к звучанию и интонациям.",
