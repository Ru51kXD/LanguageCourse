                        </div>
                        <div class="methodology-card p-3 mb-4">
                            <h3 class="h5"><i class="fas fa-tasks"></i> 
                                @{
                                    var repeatTitle = cultureTwoLetter switch
                                    {
                                        "ru" => "Регулярное повторение",
                                        "kk" => "Тұрақты қайталау",
                                        "en" => "Regular Repetition",
                                        "tr" => "Düzenli Tekrar",
                                        _ => "Регулярное повторение"
                                    };
                                }
                                @repeatTitle
                            </h3>
                            <p>
                                @{
                                    var repeatDesc = cultureTwoLetter switch
                                    {
                                        "ru" => "Мы помогаем вам запоминать новые слова и грамматические конструкции надолго.",
