        <div class="language-card-container">
            <div class="language-card language-card-kazakh fade-in-up" data-delay="0.1">
                <div class="language-card-inner">
                    <div class="language-card-front">
                        <img src="~/images/astana.jpg"> 
                        <div class="language-card-content">
                            <div class="language-card-flag">KZ</div>
                            <h3 class="language-card-title">@Localizer["KazakhLanguage"]</h3>
                            <p class="language-card-native">
                                @if (cultureTwoLetter == "kk") {
                                    @("Қазақ тілі")
                                } else if (cultureTwoLetter == "en") {
                                    @("Kazakh language")
                                } else if (cultureTwoLetter == "tr") {
                                    @("Kazak dili")
                                } else {
                                    @("Қазақ тілі")
                                }
                            </p>
                        </div>
                    </div>
                    <div class="language-card-back">
                        <div class="language-card-back-content">
                            <h3>
                                @{
                                    var kazakh_lang = cultureTwoLetter switch
                                    {
                                        "ru" => "Казахский язык",
                                        "kk" => "Қазақ тілі",
                                        "en" => "Kazakh Language",
                                        "tr" => "Kazak Dili",
