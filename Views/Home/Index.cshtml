@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Удаляем добавление медиа-запросов
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1
            });

            document.querySelectorAll('.language-card').forEach(card => {
                const delay = card.getAttribute('data-delay') || 0;
                card.style.transitionDelay = delay + 's';
                observer.observe(card);
            });
            
            document.querySelectorAll('.fade-in-up').forEach(element => {
                if (!element.classList.contains('language-card')) {
                    observer.observe(element);
                }
            });
            
            // Принудительно делаем блок "Начать обучение" видимым
            const learningStartBlock = document.querySelector('.learning-start-block');
            if (learningStartBlock) {
                setTimeout(() => {
                    const parentEl = learningStartBlock.closest('.fade-in-up');
                    if (parentEl) {
                        parentEl.classList.add('visible');
                    }
                    
                    // Обновляем стили для элементов внутри блока
                    const startLearningTitle = learningStartBlock.querySelector('h2.text-white');
                    if (startLearningTitle) {
                        startLearningTitle.style.opacity = '1';
                        startLearningTitle.style.visibility = 'visible';
                    }
                    
                    const availableLanguagesSubtitle = learningStartBlock.querySelector('h5.text-secondary');
                    if (availableLanguagesSubtitle) {
                        availableLanguagesSubtitle.style.opacity = '1';
                        availableLanguagesSubtitle.style.visibility = 'visible';
                    }
                    
                    const platformDescription = learningStartBlock.querySelector('p.platform-description');
                    if (platformDescription) {
                        platformDescription.style.opacity = '1';
                        platformDescription.style.visibility = 'visible';
                    }
                    
                    const actionButtons = learningStartBlock.querySelector('.action-buttons');
                    if (actionButtons) {
                        actionButtons.style.opacity = '1';
                        actionButtons.style.visibility = 'visible';
                    }
                }, 500);
            }
        });
    </script>
}
