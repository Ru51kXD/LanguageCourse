@model IEnumerable<WebApplication15.Models.Language>
@using WebApplication15.Models
@using static WebApplication15.Models.LocalizationService
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Home"];
    
    // Получаем текущую культуру
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureTwoLetter = requestCulture?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "ru";
    
    // Используем более простой подход к определению текстов
    // Для StartLearning и других ключевых строк берем их из Localizer напрямую
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<div class="hero-section">
    <div class="container">
        <h1 class="text-center">
            @{
                var learnLanguagesText = cultureTwoLetter switch
                {
                    "ru" => "Изучайте языки вместе с нами",
                    "kk" => "Бізбен тіл үйреніңіз",
                    "en" => "Learn Languages With Us",
                    "tr" => "Bizimle Dil Öğrenin",
                    _ => "Learn Languages With Us"
                };
            }
            @learnLanguagesText
        </h1>
        <p class="text-center">
            @{
                var masterNewLanguagesText = cultureTwoLetter switch
                {
                    "ru" => "Освойте новые языки",
                    "kk" => "Жаңа тілдерді меңгеріңіз",
                    "en" => "Master New Languages",
                    "tr" => "Yeni Dillerde Ustalaşın",
                    _ => "Master New Languages"
                };
            }
            @masterNewLanguagesText
        </p>
        <div class="hero-buttons text-center mt-4">
            <a href="/Test" class="btn btn-primary btn-lg me-3">
                @{
                    var takeTestsText = cultureTwoLetter switch
                    {
                        "ru" => "Пройти тесты",
                        "kk" => "Тесттерден өтіңіз",
                        "en" => "Take Tests",
                        "tr" => "Testlere Katılın",
                        _ => "Take Tests"
                    };
                }
                @takeTestsText
            </a>
            <a href="/Account/Profile" class="btn btn-outline-light btn-lg">
                @{
                    var personalAccountText = cultureTwoLetter switch
                    {
                        "ru" => "Личный кабинет",
                        "kk" => "Жеке кабинет",
                        "en" => "Personal Account",
                        "tr" => "Kişisel Hesap",
                        _ => "Personal Account"
                    };
                }
                @personalAccountText
            </a>
        </div>
    </div>
</div>

<div class="container fade-in-up" id="language-section">
    <h2 class="text-center mb-5">
        @{
            var chooseLanguageText = cultureTwoLetter switch
            {
                "ru" => "Выберите язык для изучения",
                "kk" => "Үйрену үшін тілді таңдаңыз",
                "en" => "Choose a language to learn",
                "tr" => "Öğrenmek için bir dil seçin",
                _ => "Choose a language to learn"
