    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация для карточек языков
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1
            });

            document.querySelectorAll('.language-card').forEach(card => {
                const delay = card.getAttribute('data-delay') || 0;
                card.style.transitionDelay = delay + 's';
                observer.observe(card);
            });
            
            document.querySelectorAll('.fade-in-up').forEach(element => {
                if (!element.classList.contains('language-card')) {
                    observer.observe(element);
                }
            });
            
            // Проверка URL на предмет временной метки и обновление страницы если ее нет
            function checkForRefresh() {
                if (!window.location.search.includes('t=')) {
                    console.log('Перезагрузка страницы для обновления локализации...');
                    // Добавляем временную метку к URL для предотвращения кэширования
                    const separator = window.location.href.includes('?') ? '&' : '?';
                    const timestamp = Date.now();
                    window.location.href = `${window.location.href}${separator}t=${timestamp}`;
                }
            }
            
            // Проверяем, совпадает ли выбранный язык с текущим
            const selectedLanguage = localStorage.getItem('selectedLanguage');
            const currentLanguage = '@cultureTwoLetter';
            
            console.log('Выбранный язык:', selectedLanguage);
            console.log('Текущий язык:', currentLanguage);
            
            if (selectedLanguage && selectedLanguage !== currentLanguage) {
                // Если не совпадает, обновляем страницу
                checkForRefresh();
            }
        });
    </script>
